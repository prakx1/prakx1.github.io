---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  activePath?: string;
}

const {
  title = "Notebook",
  description = "Working notes on backend engineering, systems design, and building reliable software.",
  activePath = "/"
} = Astro.props;

const pageTitle = title === "Notebook" ? "Notebook" : `${title} Â· Notebook`;
const canonical = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : Astro.url.pathname;

const nav = [
  { href: "/", label: "Home" },
  { href: "/about/", label: "About" },
  { href: "/projects/", label: "Projects" },
  { href: "/feed.xml", label: "RSS" }
];

const social = {
  x: "https://x.com/prax___5",
  github: "https://github.com/prakx1/",
  linkedin: "https://www.linkedin.com/in/prakash-singh-wce/"
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Prakash Singh" />
    <link rel="canonical" href={canonical} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@prax___5" />
    <meta name="twitter:creator" content="@prax___5" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&family=Oxanium:wght@500;600;700;800&family=IBM+Plex+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="aurora" aria-hidden="true"></div>
    <div class="scan-grid" aria-hidden="true"></div>

    <div class="app-shell">
      <header class="site-header">
        <a class="brand" href="/">
          <span class="brand-mark" aria-hidden="true"></span>
          <span class="brand-copy">
            <strong>Notebook</strong>
            <small>Prakash Singh</small>
          </span>
        </a>

        <div class="header-stack">
          <span class="status-pill">logbook mode: active</span>
          <nav>
            {nav.map((item) => (
              <a href={item.href} class={activePath === item.href ? "active" : ""}>{item.label}</a>
            ))}
          </nav>
        </div>
      </header>

      <main class="content-stage">
        <slot />

        <footer class="site-footer">
          <p>Built on Astro. Maintained as a living engineering notebook.</p>
          <div>
            <a href="/feed.xml">RSS</a>
            <a href={social.x} target="_blank" rel="noopener noreferrer">X</a>
            <a href={social.github} target="_blank" rel="noopener noreferrer">GitHub</a>
            <a href={social.linkedin} target="_blank" rel="noopener noreferrer">LinkedIn</a>
          </div>
        </footer>
      </main>
    </div>
  </body>
</html>
